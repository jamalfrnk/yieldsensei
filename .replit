modules = ["python-3.11", "nodejs-20", "python3", "postgresql-16"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Production Server"

[[workflows.workflow]]
name = "Production Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "FLASK_ENV=production PYTHONUNBUFFERED=1 gunicorn --workers 4 --bind 0.0.0.0:5000 --log-level info --error-logfile - --access-logfile - app:app"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "FLASK_ENV=production PYTHONUNBUFFERED=1 gunicorn --workers 4 --bind 0.0.0.0:5000 --log-level info --error-logfile - --access-logfile - app:app"]
deploymentTarget = "gce"

[[ports]]
localPort = 80
externalPort = 3000

[[ports]]
